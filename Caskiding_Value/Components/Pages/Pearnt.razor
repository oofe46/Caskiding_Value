@page "/Perant"
@rendermode InteractiveServer

<h1>perant</h1>

<div style="@Style @fontStyle">
     <label>@NumberOfPage</label>
    <label>@currentCount</label>
    <h2>Parent</h2>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Magni adipisci eaque autem fugiat! Quia, provident vitae! Magni tempora perferendis eum non provident.</p>
    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

</div>
<CascadingValue Value="@Style" Name="Style">
    <CascadingValue Value="@NumberOfPage" Name="NumberOfPage">
        <CascadingValue Value="@fontStyle" Name="fontStyle">
            <CascadingValue Value="currentCount" Name="currentCount">
                <Chiled></Chiled>
                <GrandChiled></GrandChiled>
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
    </CascadingValue>

@code {

    public string Style  { get; set; } = "width: 100%; height: 50vh; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center;padding: 15px 10px;border-radius: 10px; background-color:#fff;  border: #0078ff solid ; margin-top: 10px; ";


    public string fontStyle { get; set; } = "  font-weight: 500;line-height: 1.2;font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1.4rem;text-transform: uppercase;";

    public int NumberOfPage { get; set; } = 4;


    public int currentCount = 0;

    public void IncrementCount()
    {
        currentCount++;
       

    }


   
}